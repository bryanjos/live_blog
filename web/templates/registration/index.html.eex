<div>
  <%= form_tag("/sign/up", method: :post) %>
    <div>
      <label>Username</label>
      <input name="username" type="text" />
    </div>

    <div>
      <label>Password</label>
      <input name="password" type="password" />
    </div>

    <div>
      <label>Email</label>
      <input name="email" type="text" />
    </div>

    <button type="submit">Submit</button>
  </form>
</div>