<div>
  <%= form_tag("/sign/in", method: :post) %>
    <div>
      <label>Username/Email</label>
      <input name="username" type="text" />
    </div>

    <div>
      <label>Password</label>
      <input name="password" type="password" />
    </div>

    <button type="submit">Submit</button>
  </form>
</div>